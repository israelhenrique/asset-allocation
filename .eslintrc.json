{
  "extends": "airbnb-base",
  "env": {
    "browser": false,
    "node": true,
    "commonjs": true
  },
  "parserOptions": {
    "sourceType": "script"
  },
  "rules": {
    "consistent-return": 0,
    "func-names": 0,
    "indent": [1, 2],
    "linebreak-style": [2, "unix"],
    "no-console": 0,
    "no-shadow": 0,
    "no-unused-expressions": [2, { "allowShortCircuit": true }],
    "semi": [2, "never"]
  }
}
